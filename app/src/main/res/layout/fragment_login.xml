<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_btn"
                android:layout_above="@+id/edt_password"
                android:layout_marginBottom="@dimen/normal_margin"
                android:layout_marginLeft="@dimen/huge_margin"
                android:layout_marginRight="@dimen/huge_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@drawable/rounded_edt"
                android:drawableLeft="@drawable/ic_email_hint_24dp"
                android:drawablePadding="20dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:text="ice001@nextzy.com"
                android:textColor="@color/primaryTextLight"
                android:textColorHint="@color/hintTextLight"
                android:textSize="@dimen/body1_text_size" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_btn"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/normal_margin"
                android:layout_marginLeft="@dimen/huge_margin"
                android:layout_marginRight="@dimen/huge_margin"
                android:layout_marginTop="@dimen/normal_margin"
                android:background="@drawable/rounded_edt"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:text="12345678"
                android:textColor="@color/primaryTextLight"
                android:textColorHint="@color/hintTextLight"
                android:textSize="@dimen/body1_text_size" />


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/huge_margin"
                android:elevation="1dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#0067a0"
                fancy:fb_borderWidth="3dp"
                fancy:fb_defaultColor="#FCC10B"
                fancy:fb_focusColor="#0067a0"
                fancy:fb_radius="30dp"
                fancy:fb_text="@string/next"
                fancy:fb_textColor="@color/md_red500"
                fancy:fb_textFont="MoonBold.otf"
                fancy:fb_textSize="21sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

